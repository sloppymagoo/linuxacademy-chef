#vhost tempate file

<% if @port == 80 -%>
	NameVirtualHost *:80
<% end -%>

<VirtualHost *:<%= @port %> >

	ServerName <%= @domain %>
	DocumentRoot <%= @document_root %>

  <Directory />
    Options FollowSymlinks
    AllowOverride None
  </Directory>
  <Directory <%= @document_root %> >
    Options Indexes FollowSymlinks MultiViews
    AllowOverride None
    Order allow,deny
    allow from all
  </Directory>
</VirtualHost>
